{% extends '/front_end/base.html.twig' %}
{% block css %}
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset('/frontEnd/css/bootstrap.min.css') }}" type="text/css">

    <!--Material Icon -->
    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/materialdesignicons.min.css') }}"/>

    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/fontawesome.css') }}"/>

    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/nice-select.css') }}"/>

    <!-- selectize css -->
    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/selectize.css') }}"/>

    <!-- Custom  Css -->
    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/style.css') }}"/>
{% endblock %}
{% block content %}
    <!-- Start home -->
    <section class="bg-half page-next-level"
             style="background-image: url({{ asset('/frontEnd/images/BG-revue.png') }});">
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="text-center text-white">
                        <h4 class="text-uppercase title mb-4">Toutes les revues</h4>
                        <ul class="page-next d-inline-block mb-0">
                            <li><a href="{{ asset('/societe') }}" class="text-uppercase font-weight-bold">Societes</a>
                            </li>
                            <li><a href="#" class="text-uppercase font-weight-bold">nom societe</a>
                            </li>
                            <li><a href="#" class="text-uppercase font-weight-bold">nom offre</a>
                            </li>
                            <li><span class="text-uppercase text-white font-weight-bold">Revues</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end home -->
    <!-- CANDIDATES LISTING START -->
    <section class="section pt-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="show-results">
                        <div class="float-left">
                            <h5 class="text-dark mb-0 pt-2"> Affichage des revues :</h5>
                        </div>
                        <div class="sort-button text-center float-sm-right">
                            <ul class="list-unstyled mb-0">
                                <li class="list-inline-item mb-0 mr-3">
                                    <select class="nice-select">
                                        <option data-display="Sort By">Nothing</option>
                                        <option value="1">Web Developer</option>
                                        <option value="2">PHP Developer</option>
                                        <option value="3">Web Designer</option>
                                    </select>
                                </li>

                                <li class="list-inline-item">
                                    <select class="nice-select">
                                        <option data-display="Default">Nothing</option>
                                        <option value="1">Web Developer</option>
                                        <option value="2">PHP Developer</option>
                                        <option value="3">Web Designer</option>
                                    </select>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="">
                <div class="col-md-10">
                    <div class="candidates-listing-item">
                        <!-- Single review Start-->
                        {% for revue in revues %}
                            <div class="border mt-3 rounded p-3">
                                <div class="row">
                                    <div class="col-md-2">
                                        <div class="candidates-list-fav-btn text-left">
                                            <a href="#">
                                                <div class="candidates-listing-btn overflow-hidden">
                                                    <div class="text-dark mb-2">
                                                        <h6>{{ revue.candidatureOffre.candidat.prenom }}</h6>
                                                        <h6>{{ revue.candidatureOffre.candidat.nom }}</h6>
                                                    </div>
                                                    <img src="{{ revue.candidatureOffre.candidat.idPhoto }}"
                                                         alt="" class="d-block rounded" height="90">
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="candidates-list-desc overflow-hidden job-single-meta  pt-2">
                                            <h5 class="mb-2 text-dark">{{ revue.objet }}</h5>
                                            <div style="font-size: 20px;">
                                                {% for i in 0..4 %}
                                                    {% if revue.nbetoiles > i %}
                                                        <a class="mdi mdi-star"
                                                           style=" -webkit-text-stroke: 1px #ffc700; -webkit-text-fill-color: #ffc700 ;"></a>
                                                    {% else %}
                                                        <a class="mdi mdi-star"
                                                           style=" -webkit-text-stroke: 1px #ffc700; -webkit-text-fill-color: #FFFFFF ;"></a>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                            <ul class="list-unstyled">
                                                <li class="text-dark">
                                                    <i class="mdi mdi-office-building mr-1"></i>
                                                    Societe :
                                                    <a href="{{ asset('/societe='~revue.candidatureOffre.offreDeTravail.societe.id) }}">
                                                        {{ revue.candidatureOffre.offreDeTravail.societe.nom }}</a>
                                                </li>
                                                <li class="text-dark">
                                                    <i class="mdi mdi-briefcase mr-1"></i>
                                                    Offre :
                                                    <a href="{{ asset('/societe='~revue.candidatureOffre.offreDeTravail.societe.id~'/offreDeTravail') }}">
                                                        {{ revue.candidatureOffre.offreDeTravail.description }}</a>
                                                </li>
                                                <li class="text-muted">
                                                    <i class="mdi mdi-currency-usd mr-1"></i>
                                                    $700 - $900/month
                                                </li>
                                            </ul>
                                            <div class="text-break">
                                                <p>{{ revue.description }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="candidates-list-fav-btn text-right">
                                            <div class="fav-icon">
                                                <i class="mdi mdi-heart"></i>
                                            </div>
                                            {% if app.user %}
                                                {% if revue.candidatureOffre.candidat.user.email == app.user.email %}
                                                    <div class="candidates-listing-btn mt-2">
                                                        <a href="{{ asset('revue/'~revue.id~'/modifier') }}"
                                                           class="btn btn-primary-outline btn-sm mt-1">Modifier
                                                            revue</a>
                                                        <a href="{{ asset('revue/'~revue.id~'/supprimer') }}"
                                                           class="btn btn-primary-outline btn-sm mt-1">Supprimer
                                                            revue</a>
                                                    </div>
                                                {% endif %}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        <!-- Single review END-->
                        {% if false %}
                            <!-- Pagination START-->
                            <nav aria-label="Page navigation example">
                                <ul class="pagination job-pagination justify-content-center mb-0 mt-4 pt-2">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="{{ asset('#') }}" aria-disabled="true">
                                            <i class="mdi mdi-chevron-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item active">
                                    <li class="page-item">
                                        <a class="page-link"
                                           href="{{ asset('#') }}"</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="{{ asset('#') }}">
                                            <i class="mdi mdi-chevron-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                            <!-- Pagination END -->
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- REVIEWS LISTING END -->

{% endblock %}
{% block js %}
    <!-- javascript -->
    <script src="{{ asset('/frontEnd/js/jquery.min.js') }}"></script>
    <script src="{{ asset('/frontEnd/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('/frontEnd/js/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('/frontEnd/js/plugins.js') }}"></script>

    <!-- selectize js -->
    <script src="{{ asset('/frontEnd/js/selectize.min.js') }}"></script>

    <script src="{{ asset('/frontEnd/js/jquery.nice-select.min.js') }}"></script>
    <script src="{{ asset('/frontEnd/js/app.js') }}"></script>
{% endblock %}
