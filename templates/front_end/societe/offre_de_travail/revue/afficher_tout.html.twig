                                        );
                                        for (i = 0; i < 5; i++) {
                                            if (obj.nbEtoiles > i) {
                                                $("#contenaire-etoiles-" + obj.id).append(
                                                    "<a class='mdi mdi-star'" +
                                                    "   style=' -webkit-text-stroke: 1px #ffc700; -webkit-text-fill-color: #ffc700 ;'>" +
                                                    "</a>"
                                                );
                                            } else {
                                                $("#contenaire-etoiles-" + obj.id).append(
                                                    "<a class='mdi mdi-star'" +
                                                    "   style=' -webkit-text-stroke: 1px #ffc700; -webkit-text-fill-color: #FFFFFF ;'>" +
                                                    "</a>"
