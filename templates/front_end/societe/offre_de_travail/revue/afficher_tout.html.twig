    <script>
        let release = null;

        let revuesContainer = $('#revues-container');
        let labelsToHide = $('#labels-to-hide');
        let revuesContainerSort = $('#revues-container-sort');
        let triSelect = $('#tri-select');

        revuesContainerSort.show().empty().append(
