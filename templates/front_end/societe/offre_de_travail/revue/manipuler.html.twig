{% extends '/front_end/base.html.twig' %}
{% block title %}Khedemti | Revue{% endblock %}
{% block css %}
    <link rel="shortcut icon" href="{{ asset('front-end/images/favicon.ico') }}">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset('front-end/css/bootstrap.min.css') }}" type="text/css">

    <!--Material Icon -->
    <link rel="stylesheet" type="text/css" href="{{ asset('front-end/css/materialdesignicons.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('front-end/css/fontawesome.css') }}">

    <!-- selectize css -->
    <link rel="stylesheet" type="text/css" href="{{ asset('front-end/css/selectize.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('front-end/css/nice-select.css') }}">

    <!-- Custom  Css -->
    <link rel="stylesheet" type="text/css" href="{{ asset('front-end/css/style.css') }}">

    <!-- Review rating css -->
    <link rel="stylesheet" type="text/css" href="{{ asset('front-end/css/rating.css') }}"/>
{% endblock %}
{% block content %}
    <!-- Start home -->
    <section class="bg-half page-next-level"
             style="background-image: url({{ asset('/front-end/images/backgrounds/2000x1100/BG-revue.jpg') }})">
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="text-center text-white">
                        <h4 class="text-uppercase title mb-4">{{ manipulation }} votre revue</h4>
                        <ul class="page-next d-inline-block mb-0">
                            <li>
                                <a href="{{ asset('societe') }}" class="text-uppercase font-weight-bold">Societes</a>
                            </li>
                            <li>
                                <a href="{{ asset('societe/'~candidatureOffre.offreDeTravail.societe.id~'/afficher') }}"
                                   class="text-uppercase font-weight-bold">{{ candidatureOffre.offreDeTravail.societe.nom }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ asset('offre_de_travail/'~candidatureOffre.offreDeTravail.id~'/afficher') }}"
                                   class="text-uppercase font-weight-bold">{{ candidatureOffre.offreDeTravail.nom }}
                                </a>
                            </li>
                            <li>
                                <span class="text-uppercase text-white font-weight-bold">revues</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end home -->
    <!-- POST A JOB START -->
    <section class="section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="rounded shadow bg-white p-4">
                        <div class="custom-form">
                            <div id="message3"></div>
                            <h4 class="text-dark mb-3">{{ manipulation }} votre revue sur
                                l'offre
                                <a href="{{ asset('/offre_de_travail/'~candidatureOffre.offreDeTravail.id~'/afficher') }}"
                                   class="text-primary">{{ candidatureOffre.offreDeTravail.nom }}</a>
                                de
                                <a href="{{ asset('/societe/'~candidatureOffre.offreDeTravail.societe.id~'/afficher') }}"
                                   class="text-primary">{{ candidatureOffre.offreDeTravail.societe.nom }}</a>
                                :</h4>
                            {% include'/front_end/societe/offre_de_travail/revue/modele_manipuler.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- POST A JOB END -->
    {% block js %}
        <!-- javascript -->
        <script src="{{ asset('front-end/js/jquery.min.js') }}"></script>
        <script src="{{ asset('front-end/js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('front-end/js/jquery.easing.min.js') }}"></script>
        <script src="{{ asset('front-end/js/plugins.js') }}"></script>

        <!-- selectize js -->
        <script src="{{ asset('front-end/js/selectize.min.js') }}"></script>

        <script src="{{ asset('front-end/js/jquery.nice-select.min.js') }}"></script>

        <script src="{{ asset('front-end/js/app.js') }}"></script>
        <div class="selectize-dropdown single demo-default"
             style="display: none; width: 106px; top: 40.6px; left: 1208.6px;">
            <div class="selectize-dropdown-content"></div>
        </div>
        <span style="position: absolute; top: -99999px; left: -99999px; width: auto; padding: 0px; white-space: pre; letter-spacing: 0px; font-size: 13px; font-family: Nunito, sans-serif; font-weight: 400; text-transform: none;">Language</span>
    {% endblock %}
{% endblock %}
