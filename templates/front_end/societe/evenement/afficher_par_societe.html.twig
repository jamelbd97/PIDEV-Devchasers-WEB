{% extends 'front_end/base.html.twig' %}
{% block title %}Khedemti | Evenements{% endblock %}
{% block content %}
    <section class="bg-half page-next-level"
             style="background-image: url({{ asset('/front-end/images/backgrounds/2000x1100/BG-evenement.jpg') }})">
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="text-center text-white">
                        <h4 class="text-uppercase title mb-4">Evenements de {{ societe.nom }}</h4>
                        <ul class="page-next d-inline-block mb-0">
                            <li><a href="{{ asset('/societe') }}"
                                   class="text-uppercase font-weight-bold">Societes</a>
                            </li>
                            <li><a href="{{ asset('/societe/'~societe.id~'/afficher') }}"
                                   class="text-uppercase font-weight-bold">{{ societe.nom }}</a>
                            </li>
                            <li><span class="text-uppercase text-white font-weight-bold">Evenements</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section py-5">
        <div class="row mx-5">
            <div class="col-md-6">
                <div class="component-wrapper border rounded bg-light shadow">
                    <div class="p-4 border-bottom rounded-top bg-dark">
                        <h4 class="title text-light mb-0">Evenements de {{ societe.nom }}</h4>
                    </div>
                    <div class="p-4">
                        {% if evenements|length > 0 %}
                            <div class="faq-content">
                                <div class="accordion" id="accordionExample">
                                    {% for evenement in evenements %}
                                        {% include "front_end/societe/evenement/modele_evenement.html.twig" %}
                                    {% endfor %}
                                </div>
                            </div>
                        {% else %}
                            <p class="h3 text-center">Aucun evenement</p>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                {{ render(controller(
                    'App\\Controller\\front_end\\EvenementController::calendrierEvenement',
                    { 'societeId': societe.id }
                )) }}
            </div>
        </div>
    </section>

{% endblock %}
