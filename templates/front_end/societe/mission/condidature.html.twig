                                        <div class="lable text-center pt-2 pb-2">
                                            <ul class="list-unstyled best text-white mb-0 text-uppercase">
                                                <li class="list-inline-item"><i class="mdi mdi-star"></i></li>
                                            </ul>
                                        </div>
                                        <div class="p-4">
                                            <div class="row align-items-center">
                                                <div class="col-md-2">
                                                    <div class="mo-mb-2">
                                                        <img src="{{ asset('/frontEnd/images/how-it-work/img-2.png') }}" alt="" class="img-fluid mx-auto d-block">
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div>
                                                        <h5 class="f-18"><a href="{{ asset('#') }}" class="text-dark">{{condidat[pi].prenom}} {{condidat[pi].nom}}</a></h5>
                                                        {# <p class="text-muted mb-0">Web Technology pvt.Ltd</p> #}
