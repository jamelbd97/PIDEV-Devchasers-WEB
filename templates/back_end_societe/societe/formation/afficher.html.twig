{% extends '/back_end_societe/base.html.twig' %}
{% block content %}
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <a href="{{ asset('espace_societe/formation/') }}"
                       class="col-md-1 btn btn-primary shadow-sm py-2">
                        <i class="fa fa-arrow-left"></i>&nbsp&nbspRetour
                    </a>
                    <div class="col-md-7 d-inline-flex">
                        <h2 class="text-primary">&nbsp&nbsp Formation : </h2>
                        <h2 class="text-secondary font-weight-light">&nbsp {{ formation.nom }}</h2>
                    </div>
                    <div class="col-md-2 m-auto">
                        <a href="{{ asset('espace_societe/formation/'~formation.id~'/modifier') }}"
                           class="btn btn-dark shadow-sm w-100">Modifier
                        </a>
                    </div>
                    <form class="col-md-2 m-auto" method="post"
                          action="{{ asset('espace_societe/formation/'~formation.id~'/supprimer') }}"
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette formation ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
                        <input type="submit" class="btn btn-danger w-100" value="Supprimer">
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ formation.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ formation.nom }}</td>
                        </tr>
                        <tr>
                            <th>Filiere</th>
                            <td>{{ formation.filiere }}</td>
                        </tr>
                        <tr>
                            <th>Debut</th>
                            <td>{{ formation.debut ? formation.debut|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Fin</th>
                            <td>{{ formation.fin ? formation.fin|date('Y-m-d') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
