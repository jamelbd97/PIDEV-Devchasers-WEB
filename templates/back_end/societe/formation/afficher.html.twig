{% extends 'back_end/base.html.twig' %}
{% block content %}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Formation</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ formation.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ formation.nom }}</td>
                    </tr>
                    <tr>
                        <th>Filiere</th>
                        <td>{{ formation.filiere }}</td>
                    </tr>
                    <tr>
                        <th>Debut</th>
                        <td>{{ formation.debut ? formation.debut|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Fin</th>
                        <td>{{ formation.fin ? formation.fin|date('Y-m-d') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ asset('back_end/formation') }}"
                   class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Retour</a>

                <a href="{{ asset('back_end/formation/'~formation.id~'/modifier') }}"
                   class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">Modifier</a>

                <form method="post" action="{{ asset('back_end/formation/'~formation.id~'/supprimer') }}"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
                    <button class="btn">Supprimer</button>
                </form>
                {% endblock %}
