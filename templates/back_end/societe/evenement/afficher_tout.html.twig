{% extends 'back_end/base.html.twig' %}
{% block content %}


    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->


        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Debut</th>
                            <th>Fin</th>
                            <th>Description</th>
                            <th>All_day</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for evenement in evenements %}
                            <tr>
                                <td>{{ evenement.id }}</td>
                                <td>{{ evenement.titre }}</td>
                                <td>{{ evenement.debut ? evenement.debut|date('Y-m-d') : '' }}</td>
                                <td>{{ evenement.fin ? evenement.fin|date('Y-m-d') : '' }}</td>
                                <td>{{ evenement.description }}</td>
                                <td>{{ evenement.allDay ? 'Yes' : 'No' }}</td>
                                <td>
                                    <a href="{{ asset('back_end/evenement/'~evenement.id~'/afficher') }}"
                                       class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">Afficher</a>
                                    <a href="{{ asset('back_end/evenement/'~evenement.id~'/modifier') }}"
                                       class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">Modifier</a>
                                    <a href="{{ asset('back_end/evenement/'~evenement.id~'/supprimer') }}"
                                       class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">Supprimer</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <br>

            {# display navigation #}
            <div class="navigation text-center">
                <h3><b>  {{ knp_pagination_render(evenements) }}</b></h3>
                <style>
                    .text-center {
                        text-align: center !important;
                        margin-left: 530px;
                    }
                </style>
            </div>


            <br> <br>
        </div>

    </div>

{% endblock %}
