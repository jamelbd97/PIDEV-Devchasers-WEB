{% extends '/frontEnd/base.html.twig' %}
{% block content %}
    <section class="bg-half page-next-level">
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="text-center text-white">
                        <h1>{{ societe.nomSociete }}</h1>
                        ID : {{ societe.id }} ||
                        Date creation : {{ societe.dateCreationSociete|date("d/m/Y") }} ||
                        Tel : {{ societe.numTelSociete }} ||
                        ID photo : {{ societe.idPhotoSociete }}
                        <br>----------------<br>
                        <a href="{{ asset('societe='~societe.id~'/offreDeTravail') }}">
                            Afficher les offre de travail de {{ societe.nomSociete }}</a><br>
                        ----------------<br>
                        <a href="{{ asset('societe='~societe.id~'/revue/activePage=1') }}">
                            Afficher revues sur toutes les offres de {{ societe.nomSociete }}</a><br>
                        ----------------<br>
                        <a href="{{ asset('societe/modifier/id='~societe.utilisateur.id'/email='~societe.utilisateur.email~'/password='~societe.utilisateur.motDePasse) }}">Modifier</a> |
                        <a href="{{ asset('utilisateur='~societe.utilisateur.id~'/supprimer/') }}">Supprimer utilisateur</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}