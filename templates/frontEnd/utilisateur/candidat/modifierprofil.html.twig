{% extends '/frontEnd/base.html.twig' %}

{% block css %}
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset('/frontEnd/css/bootstrap.min.css') }}" type="text/css">

    <!--Material Icon -->
    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/materialdesignicons.min.css') }}"/>

    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/fontawesome.css') }}"/>

    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/nice-select.css') }}"/>

    <!-- selectize css -->
    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/selectize.css') }}"/>

    <!-- Custom  Css -->
    <link rel="stylesheet" type="text/css" href="{{ asset('/frontEnd/css/style.css') }}"/>
{% endblock %}
{% block content %}
    <script>
        document.getElementById("topnav").setAttribute("class", "scroll-active scroll");
    </script>
    <section>
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 mt-4 pt-2">
                        <div class="component-wrapper rounded shadow">
                            <div class="p-4 border-bottom bg-light">
                                <h4 class="title mb-0"> Modifier votre profil</h4>
                            </div>
                            <div class="p-4">
                                {{ form_start(form) }}
                                {% do form.nom.setRendered() %}
                                {% do form.prenom.setRendered() %}
                                {% do form.dateNaissance.setRendered() %}
                                {% do form.sexe.setRendered() %}
                                {% do form.tel.setRendered() %}
                                {% do form.idPhoto.setRendered() %}
                                {% do form.submit.setRendered() %}

                                <form name="candidat" method="post">

                                    <input type="file" id="candidat_idPhoto" name="candidat[idPhoto]">

                                    <div class="row">
                                        {{ form_errors(form.nom) }}
                                        <div class="col-md-6">
                                            <div class="form-group position-relative">
                                                <label for="candidat_nom" class="required">Nom</label>
                                                <input type="text"
                                                       id="candidat_nom"
                                                       name="candidat[nom]"
                                                       maxlength="255"
                                                       value="{{ candidat.nom }}"
                                                       class="form-control"
                                                       placeholder="">
                                            </div>
                                        </div>
                                        {{ form_errors(form.prenom) }}
                                        <div class="col-md-6">
                                            <div class="form-group position-relative">
                                                <label for="candidat_prenom" class="required">Prenom</label>
                                                <input type="text"
                                                       id="candidat_prenom"
                                                       name="candidat[prenom]"
                                                       maxlength="255"
                                                       value="{{ candidat.prenom }}"
                                                       class="form-control"
                                                       placeholder="">
                                            </div>
                                        </div>
                                        {{ form_errors(form.dateNaissance) }}
                                        <div class="col-md-12">
                                            <div class="form-group mb-0">
                                                <label for="date-de-naissance" class="required">Date de naissance
                                                    :</label>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group position-relative">
                                                <label for="candidat_dateNaissance_day" class="required ml-2"
                                                       style="color: grey; font-size : 12px">Jour</label>
                                                <input type="text" id="candidat_dateNaissance_day"
                                                       name="candidat[dateNaissance][day]"
                                                       maxlength="255"
                                                       value="{{ candidat.dateNaissance|date('d') }}"
                                                       class="form-control"
                                                       placeholder="">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group position-relative">
                                                <label for="candidat_dateNaissance_month" class="required ml-2"
                                                       style="color: grey; font-size : 12px">Mois</label>
                                                <div class="form-group">
                                                    <select id="candidat_dateNaissance_month"
                                                            name="candidat[dateNaissance][month]"
                                                            class="nice-select rounded w-100">
                                                        {% set mois=["Janvier","Fevrier","Mars","Avril","May","Juin",
                                                            "Juillet","Aout","Septembre","Octobre","Novembre","Decembre"] %}
                                                        {% for i in 1..12 %}
                                                            <option value="{{ i }}"
                                                                    {% if i == candidat.dateNaissance|date('m') %}
                                                                        selected="selected"
                                                                    {% endif %}
                                                            >{{ mois[i-1] }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group position-relative">
                                                <label for="candidat_dateNaissance_year" class="required ml-2"
                                                       style="color: grey; font-size : 12px">Ann√©e</label>
                                                <input type="text" id="candidat_dateNaissance_year"
                                                       name="candidat[dateNaissance][year]"
                                                       maxlength="255"
                                                       value="{{ candidat.dateNaissance|date('Y') }}"
                                                       class="form-control"
                                                       placeholder="">
                                            </div>
                                        </div>
                                        {{ form_errors(form.sexe) }}
                                        <div class="col-md-3">
                                            <div class="form-group position-relative">
                                                <label for="candidat_sexe" class="required">Sexe</label>
                                                <input type="text" id="candidat_sexe"
                                                       name="candidat[sexe]"
                                                       maxlength="255"
                                                       value="{{ candidat.sexe }}"
                                                       class="form-control"
                                                       placeholder="">
                                            </div>
                                        </div>
                                        {{ form_errors(form.tel) }}
                                        <div class="col-md-3">
                                            <div class="form-group position-relative">
                                                <label for="candidat_tel" class="required">Numero tel</label>
                                                <input type="text" id="candidat_tel"
                                                       name="candidat[tel]"
                                                       maxlength="8"
                                                       value="{{ candidat.tel }}"
                                                       class="form-control"
                                                       placeholder="">
                                            </div>
                                        </div>
                                        {{ form_errors(form.idPhoto) }}
                                        <div class="col-md-12">
                                            <div class="form-group position-relative">
                                                <label for="candidat_idPhoto" class="required">idPhoto</label>
                                                <input type="text" id="candidat_idPhoto"
                                                       name="candidat[idPhoto]"
                                                       maxlength="255"
                                                       value="{{ candidat.idPhoto }}"
                                                       class="form-control"
                                                       placeholder="">
                                            </div>
                                        </div>
                                    </div><!--end row-->
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <button type="submit" id="candidat_submit"
                                                    class="btn btn-primary"
                                                    name="candidat[submit]">Modifier
                                            </button>
                                        </div><!--end col-->
                                    </div><!--end row-->
                                </form><!--end form-->
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <a href="#" class="back-to-top rounded text-center" id="back-to-top" style="display: inline;">
        <i class="mdi mdi-chevron-up d-block"> </i>
    </a>

    <!-- selectize js -->
    <script src="frontEnd/js/selectize.min.js"></script>
    <script src="frontEnd/js/jquery.nice-select.min.js"></script>
    <script src="frontEnd/js/app.js"></script>
{% endblock %}