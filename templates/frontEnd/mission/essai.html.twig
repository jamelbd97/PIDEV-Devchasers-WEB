{% extends '/frontEnd/base.html.twig' %}
{% block topImage %}
    <section class="bg-home"
             style="background: url('https://via.placeholder.com/2000X1333//88929f/5a6270C/O https://placeholder.com/') center center;">
        <div class="bg-overlay"></div>
        <div class="home-center">
            <div class="home-desc-center">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="title-heading text-white">
                                <h1 class="heading text-center font-weight-bold mb-4">Offre de travail</h1>
                                 {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                                <div class="form-group">
                                    {{ form_label(form.mission_name) }}
                                    {{ form_widget(form.mission_name, {'attr': {'placeholder': 'mission name','class': 'form-control'}}) }}
                                     {{ form_errors(form.mission_name) }}
                                </div>
                                 <div class="form-group">
                                  {{ form_label(form.description) }}
                                  {{ form_widget(form.description, {'attr': {'placeholder': 'description','class': 'form-control'}}) }}
                                  {{ form_errors(form.description) }}
                                </div>
                                  <div class="form-group">
                                  {{ form_label(form.nbheure) }}
                                  {{ form_widget(form.nbheure, {'attr': {'placeholder': 'Nombre d\'heure','class': 'form-control'}}) }}
                                  {{ form_errors(form.nbheure) }}
                                  
                                </div>
                                 <div class="form-group">
                                  {{ form_label(form.prixH) }}
                                  {{ form_widget(form.prixH, {'attr': {'placeholder': 'Prix','class': 'form-control'}}) }}
                                  {{ form_errors(form.prixH) }}
                                </div>
                                {# <div>
                                <i class="fa fa-calendar"></i> {{ form_label(form.date) }}
                                  {{form_row(form.date)}}
                                </div> #}
                                 {# {{form_widget(form.Ajouter)}} #}
                                 <div class="form-group">
                                
                                  <i class="fa fa-calendar"></i>  {{form_row(form.date)}}
                                 {{ form_errors(form.date) }}
                                 {{ form_widget(form.Ajouter, {'attr': {'class': 'submitBnt btn btn-primary btn-block mx-auto','style':'width: 300px;' }}) }}
                                  {# <a href="#" class="btn btn-primary-outline pull-right">Browse All Categories <i class="mdi mdi-chevron-right"></i></a> #}
                                 {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block content %}
{% endblock %}